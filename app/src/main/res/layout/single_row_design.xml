<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dimen20"
    android:layout_marginEnd="@dimen/dimen10"
    android:layout_marginStart="@dimen/dimen10"
    android:layout_marginTop="@dimen/dimen4"
    android:layout_marginBottom="@dimen/dimen4"
    android:elevation="12dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_layout"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen200"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/datebox"
            android:layout_width="@dimen/dimen200"
            android:layout_height="@dimen/dimen36"
            android:background="@drawable/bg_layout_gallery"
            android:layout_alignTop="@+id/img1"
            android:layout_alignEnd="@id/img1"/>

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This Is Date Text"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_alignEnd="@id/datebox"
            android:layout_alignStart="@+id/datebox"
            android:layout_alignTop="@id/datebox"
            android:layout_alignBottom="@id/datebox"/>

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img1"
            android:gravity="center"
            android:layout_margin="@dimen/dimen5"
            android:text="This is Header Text"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold" />
        <View
            android:id="@+id/linesinglerow"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen50"
            android:layout_marginRight="@dimen/dimen50"
            android:layout_height="2dp"
            android:background="#000000"
            android:visibility="visible"
            android:layout_below="@+id/t1"/>

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linesinglerow"
            android:gravity="center"
            android:text="This is Description Text"
            android:textColor="#292929"
            android:textSize="@dimen/font18" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>